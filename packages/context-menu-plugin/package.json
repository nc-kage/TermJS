{
  "name": "@term-js/context-menu-plugin",
  "version": "0.1.0",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "jsnext:main": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack-dev-server --config webpack.config.js",
    "build": "rollup -c",
    "test": "jest",
    "test-coverage": "jest --coverage --collectCoverageFrom=src/**/*.ts",
    "lint": "tslint --project tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nc-kage/termjs.git"
  },
  "author": "Pavlo Gusar",
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.html?$": "html-loader-jest",
      "^.+\\.(css|scss)?$": "<rootDir>/tests/__mocks__/styleMock.js"
    },
    "moduleNameMapper": {
      "^@general/(.*)$": "<rootDir>/../../general/$1",
      "^@ContextMenu/(.*)$": "<rootDir>/src/ContextMenu/$1",
      "^lodash-es$": "lodash"
    }
  },
  "dependencies": {
    "@term-js/term": "file:../term",
    "@types/lodash-es": "^4.17.3",
    "lodash-es": "^4.17.15"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-typescript": "^7.12.1",
    "@types/jest": "^26.0.15",
    "@types/webpack-env": "^1.15.3",
    "autoprefixer": "^9.8.6",
    "babel-loader": "^8.1.0",
    "cross-env": "^7.0.2",
    "html-loader-jest": "^0.2.1",
    "jest": "^26.6.1",
    "node-sass": "^5.0.0",
    "rollup": "^2.33.1",
    "terser-webpack-plugin": "^5.0.3",
    "ts-jest": "^26.4.3",
    "tslint": "^6.1.2",
    "typescript": "^4.0.5",
    "webpack": "^5.3.2",
    "webpack-cli": "^4.1.0",
    "webpack-dev-server": "^3.11.0"
  }
}
